<p id="notice"><%= notice %></p>
<div class="site_box">
<%= link_to 'New Site', new_site_path,class:'button'  %>
<table class="center" style="margin-left: auto; margin-right: auto;">
  <thead>
    <tr>
      <th>Address</th>
      <th>User</th>
      <th>Creation</th>
      <th>Delay</th>
      <th>Maintenance</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.address %></td>
        <td><%= site.user.email %></td>
        <td><%= site.creation %></td>
        <td><%= site.delay %></td>
        <td><%= site.maintenance %></td>
        <td><%= link_to 'Show', site ,class:'button' %></td>
        <td><%= link_to 'Edit', edit_site_path(site) ,class:'button' %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } ,class:'button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>
