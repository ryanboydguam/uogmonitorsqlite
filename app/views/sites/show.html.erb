<p id="notice"><%= notice %></p>

<div class="showContainer">
  <div class="showBlockLeft">
    <div class="showParentElement showElementLeft">Address: </div>
    <div class="showChildElement showElementLeft">Status: </div>
    <div class="showChildElement showElementLeft">User: </div>
    <div class="showChildElement showElementLeft">Creation: </div>
    <div class="showChildElement showElementLeft">Delay: </div>
    <div class="showChildElement showElementLeft">Maintenance: </div>
    <div class="showChildElement showElementLeft">Mean: </div>
    <div class="showChildElement showElementLeft">Houruptime: </div>
    <div class="showChildElement showElementLeft">lastseen: </div>
    <div class="showChildElement showElementLeft"><%= link_to 'Edit Site', edit_site_path(@site) %>:</div>
    <div class="showChildElement showElementLeft"><%= link_to 'Back To Sites', sites_path %>:</div>
  </div>
  <div class="showBlockRight">
    <div class="showParentElementRight showElementRight"><%= @site.address %></div>
    <div class="showChildElement showElementRight"><%= @site.status %></div>
    <div class="showChildElement showElementRight"><%= @site.user.email %></div>
    <div class="showChildElement showElementRight"><%= @site.creation %></div>
    <div class="showChildElement showElementRight"><%= @site.delay %></div>
    <div class="showChildElement showElementRight"><%= @site.maintenance %></div>
    <div class="showChildElement showElementRight"><%= @site.mean %></div>
    <div class="showChildElement showElementRight"><%= @site.houruptime %></div>
    <div class="showChildElement showElementRight"><%= @site.lastseen %></div>
    <div class="showChildElement showElementRight"></div>
    <div class="showChildElement showElementRight"></div>
  </div>
</div>
<%= form_tag site_path(@site),method: :get do %>
<%= label_tag :start_date %>
<%= date_field_tag :start_date %>
<%= label_tag :end_date %>
<%= date_field_tag :end_date %>
<%= submit_tag 'Submit' %>
<%end%>



<div style="height: 50%; width:100%; overflow: auto">
  <table style="height: 400px;width:100%">
    <tr>
      <th style="position: sticky; top: 0; z-index: 1;">Delay</th>
      <th style="position: sticky; top: 0; z-index: 1;">Local Time</th>
      <th style="position: sticky; top: 0; z-index: 1;">Time</th>
    </tr>
    <%data_holder = @networkpages.pluck(:relaytime,:creation).reverse()%>
    <%@networkpages.each do |data|%>
      <tr>
        <td><%=data.relaytime%></td>
        <td><%=l(data.creation,locale: :en)%></td>
      </tr>
    <%end%>
  </table>
</div>
