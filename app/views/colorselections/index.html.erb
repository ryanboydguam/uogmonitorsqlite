<p id="notice"><%= notice %></p>

<h1>Colorselections</h1>

<table>
  <thead>
    <tr>
      <th>Red</th>
      <th>Blue</th>
      <th>Green</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colorselections.each do |colorselection| %>
      <tr>
        <td><%= colorselection.red %></td>
        <td><%= colorselection.blue %></td>
        <td><%= colorselection.green %></td>
        <td><%= link_to 'Show', colorselection %></td>
        <td><%= link_to 'Edit', edit_colorselection_path(colorselection) %></td>
        <td><%= link_to 'Destroy', colorselection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Colorselection', new_colorselection_path %>
